<div class="max-w-6xl mx-auto lg:px-6 px-4 pb-12">
  <div class="lg:pt-12 pt-6 flex items-center">
    <h1 class="text-2xl">
      <a href="/">{{ global.title }}</a>
    </h1>
    <div class="ml-auto flex items-center">
      <nav class="lg:block hidden flex items-center">
        {%- for item in global.navigation -%}
        <a class="ml-8 border-b transition-1 border-transparent hover:border-white" href="{{ item.url }}">{{ item.name }}</a>
        {%- endfor -%}
      </nav>
      <a class="block ml-8 py-2 px-4 transition-1 bg-blue-700 hover:bg-blue-800 rounded font-black" href="{{ global.tickets.url }}" target="_blank" rel="noopener noreferrer">{{ global.tickets.name }}</a>
    </div>
  </div>
</div>